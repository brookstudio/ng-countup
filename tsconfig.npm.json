{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "index.ts",
    "./src/count-up"
  ],
  "exclude": [
    "./src/app",
    "./node_modules"
  ]
}
